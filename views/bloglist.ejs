<!DOCTYPE html>
<html>
<head>
    <title>Home</title>
    <meta charset="utf-8" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,400i,700,700i,900,900i" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="/css/main.css" />
</head>
<body class="animsition">
<div class="shop-layout-3" id="page">
    <% include partials/header.ejs %>

    <section class="boxed-sm">
        <div class="container">
            <div class="row">
                <div class="row main">
                    <div class="col-md-12">
                        <div class="row blog-h flex multi-row wrapper">
                            <% if(data){ %>
                            <% data.forEach(function (blog) {  %>
                            <div class="col-md-4">
                                <div class="post">
                                    <div class="img-wrapper js-set-bg-blog-thumb">
                                        <a href="/blog/<%= blog._id %>">
                                            <img src="/images/slike/blog/<%= blog.image %>" alt="Image" />
                                        </a>
                                    </div>
                                    <div class="desc">
                                        <h4>
                                            <a href="/blog/<%= blog._id %>"><%= blog.title %></a>
                                        </h4>
                                        <p class="meta">
                                            <span class="time"><%= moment(blog.createdOn).format("Do MMM YYYY");%></span>
                                            <span class="comment">2</span>
                                        </p>
                                        <p><%- blog.description %> </p>
                                    </div>
                                </div>
                            </div>
                            <% })} %>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <nav>
                                    <ul class="pagination pagination-style-2">
                                        <% if(current != 1) { %>
                                        <li>
                                            <a class="prev page-numbers" href="/blog?page=<%= current - 1 %>">
                                                <i class="fa fa-long-arrow-left"></i>
                                            </a>
                                        </li>
                                        <% }  %>
                                        <% for( i=1; i<=pages; i++ ) { %>
                                        <li ><a href="/blog?page=<%= i%>"><%= i%></a></li>
                                        <%}%>

                                        <% if(pages) {    %>
                                        <% if(current != pages) {    %>
                                        <li>
                                            <a class="next page-numbers" href="/blog?page=<%= parseInt(current) + 1; %>">
                                                <i class="fa fa-long-arrow-right"></i>
                                            </a>
                                        </li>
                                        <% }} %>
                                    </ul>
                                </nav>
                            </div>
                    </div>
                    </div>



                </div>
            </div>
        </div>
    </section>
</div>
<% include partials/footer.ejs%>

<% include partials/footerscripts.ejs %>
</body>
</html>
