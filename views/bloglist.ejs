<!DOCTYPE html>
<html>
<head>
    <% include partials/head.ejs %>
</head>
<body class="animsition">
<div class="shop-layout-3" id="page">
    <% include partials/header.ejs %>
    <% include partials/subheader.ejs %>

    <section class="boxed-sm" style="padding-top: 50px">
        <div class="container">
            <div class="row">
                <div class="row main">
                    <div class="col-md-12">
                        <div class="row blog-h flex multi-row wrapper">
                            <% if(data){ %>
                            <% data.forEach(function (blog) {  %>
                            <div class="col-md-4">
                                <div class="post">
                                    <div class="img-wrapper js-set-bg-blog-thumb">
                                        <a href="/blog/<%= blog._id %>">
                                            <img src="/images/blog/<%= blog.image %>" alt="Image" />
                                        </a>
                                    </div>
                                    <div class="desc">
                                        <h4>
                                            <a href="/blog/<%= blog._id %>"><%= blog.title %></a>
                                        </h4>
                                        <p class="meta">
                                            <span class="author "><%= blog.authorID %></span>

                                            <span class="time pull-right" ><%= moment(blog.createdOn).format("Do MMM YY");%></span>
                                        </p>
                                        <p><%- blog.description %> </p>
                                    </div>
                                </div>
                            </div>
                            <% })} %>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <nav>
                                    <ul class="pagination pagination-style-2">
                                        <% if(current != 1) { %>
                                        <li>
                                            <a class="prev page-numbers" href="/blog?page=<%= current - 1 %>">
                                                <i class="fa fa-long-arrow-left"></i>
                                            </a>
                                        </li>
                                        <% }  %>
                                        <% for( i=1; i<=pages; i++ ) { %>
                                        <li ><a href="/blog?page=<%= i%>"><%= i%></a></li>
                                        <%}%>

                                        <% if(pages) {    %>
                                        <% if(current != pages) {    %>
                                        <li>
                                            <a class="next page-numbers" href="/blog?page=<%= parseInt(current) + 1; %>">
                                                <i class="fa fa-long-arrow-right"></i>
                                            </a>
                                        </li>
                                        <% }} %>
                                    </ul>
                                </nav>
                            </div>
                    </div>
                    </div>



                </div>
            </div>
        </div>
    </section>
</div>
<% include partials/footer.ejs%>
<% include partials/footerscripts.ejs %>
</body>
</html>
