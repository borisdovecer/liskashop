<!DOCTYPE html>
<html>
<head>
  <title>Home</title>
  <meta charset="utf-8" />
  <meta name="description" content="" />
  <meta name="keywords" content="" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,400i,700,700i,900,900i" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i" rel="stylesheet" />
  <link rel="stylesheet" type="text/css" href="css/main.css" />
</head>
<body class="animsition">
<div class="about" id="page">
    <% include partials/header.ejs %>
  <section class="sub-header shop-layout-1">
  <img class="rellax bg-overlay" src="/images/slike/shoppozadina.jpg" alt="">
  <div class="overlay-call-to-action"></div>
  <h3 class="heading-style-3">Profile</h3>
  </section>
  <section class="boxed-sm">
    <div class="container">
      <div class="row blog-v reverse">
        <div class="col-md-12">
          <div class="post">
            <div class="img-wrapper js-set-bg-blog-thumb">
              <img src="images/slike/liska.jpg" alt="blog-thumb">
            </div>
            <% if(data){%>
            <% data.forEach(function (p) { %>
            <div class="desc">
              <h3 class="title-about"><%= p.firstname %> <%= p.lastname %></h3>
              <p class="sapo"><%= p.email %></p>
              <p class="sapo"><%= p.phone %></p>
              <p class="sapo"><%= p.address %></p>
              <p class="sapo"><%= p.city %></p>
              <p class="sapo"><%= p.role %></p>
              <div class="proceed-to-checkout">
                <a class="btn btn-brand pill" href="/profile/<%= p._id %>">EDIT PROFILE</a>
              </div>
            </div>
            <% }) } %>
          </div>
        </div>
        <div class="col-md-12">

            <div class="desc" style="padding-top: 50px;">
              <h3 class="title-about">My orders: </h3>
              <table class="shop_attributes table table-striped table-bordered">
                <tbody>
                <tr style='text-align:left; background-color:#CCC'>
                  <th>Order ID</th>
                  <th>Items </th>
                  <th>Total price</th>
                  <th>Status</th>

                  <th>Action</th>
                </tr>

                <% if(orders){ %>
                <% orders.forEach(function (o) { %>
                <tr>
                  <td><%= o._id %></td>
                  <td>
                  <% o.items.forEach(function (v) { %>
                  <p><%= v.itemname %> // <%= v.itemprice %> RSD x <%= v.qty %></p>
                  <% }) %>
                   </td>
                  <td>
                    <p><%= o.orderprice %> RSD</p>
                  </td>
                  <td><%= o.status %></td>

                  <td>
                    <% if (o.status === "sent") {%>
                    <div style="float:left">
                      <a href="/review/<%= o._id %>">Review</a>
                    </div>
                    <% } %>
                  </td>
                </tr>
                <% })} %>
                </tbody>
              </table>

            </div>
        </div>
      </div>
    </div>
  </section>
</div>

<% include partials/footer.ejs %>
<% include partials/footerscripts.ejs %>
</body>
</html>
