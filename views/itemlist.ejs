<!DOCTYPE html>
<html>
<head>
    <% include partials/head.ejs %>
</head>
<body class="animsition">
<div class="shop-layout-3" id="page">
    <% include partials/header.ejs %>
    <% include partials/subheader.ejs %>
    <section class="boxed-sm">
        <div class="container">
            <div class="row">
                <div class="row main">
                    <div class="col-md-3">
                        <div class="sidebar">

                            <div class="widget widget-categories">
                                <h4 class="title-widget text-center">Kategorije</h4>
                                <ul>
                                    <li>
                                        <a href="/items?category=voce">Voće</a>
                                    </li>
                                    <li>
                                        <a href="/items?category=povrce">Povrće</a>
                                    </li>
                                    <li>
                                        <a href="/items?category=domaciproizvodi">Domaći proizvodi</a>
                                    </li>
                                    <li>
                                        <a href="/items?category=mlekaijaja">Mleka i Jaja</a>
                                    </li>
                                    <li>
                                        <a href="/items?category=vinairakije">Vina i Rakije</a>
                                    </li>
                                    <li>
                                        <a href="/items?category=orasasti">Orasasti plodovi</a>
                                    </li>

                                </ul>
                            </div>
                            <div class="widget widget-categories">
                                <h4 class="title text-center">Pretraga</h4>
                                <ul>
                                    <li>
                                        <div class="form-outer">

                                            <form  action="/items" method="get">
                                                <input placeholder="Search" name="search"/>
                                                <button type="submit" class="search">
                                                    <span class="lnr lnr-magnifier"></span>
                                                </button>
                                            </form>
                                        </div>
                                    </li>
                                    <li>
                                        <form  action="/items" method="get">
                                            Od:<input placeholder="Od" name="$gte" style="width: 15%" step="1" min="0" value="0"/>
                                            Do:<input placeholder="Do" name="$lte" style="width: 15%" step="1" min="0" value="0"/> RSD


                                            <button  type="submit" >Primeni</button>
                                        </form>
                                    </li>
                                    <li>
                                    <form  action="/items" method="get">
                                        <select class="orderby select-custom-wrapper" name="orderby">
                                            <option value="_id -1" selected="selected">Osnovno</option>
                                            <option value="price 1">Po ceni +</option>
                                            <option value="price -1">Po ceni - </option>
                                            <option value="createdOn 1">Po datumu +</option>
                                            <option value="createdOn -1">po datumu -</option>
                                            <option value="name 1">Po imenu +</option>
                                            <option value="name -1">po imenu -</option>

                                        </select>
                                        <button  type="submit" >Primeni</button>
                                    </form>
                                    </li>

                                </ul>
                            </div>
                            <div class="widget widget-tags">
                                <h4 class="title text-center">Tagovi</h4>
                                <ul>
                                    <% if (tags) { %>
                                    <% tags.forEach(function (tag) { %>
                                    <li>
                                        <a href="/items?tag=<%= tag %>"><%= tag %></a>
                                    </li>
                                    <% })} %>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="row blog-h flex multi-row wrapper" >
                            <% if(data){ %>
                            <% data.forEach(function (item) {  %>
                            <div class="col-md-4" style="padding-top: 25px">
                                <div class="post">
                                    <div class="img-wrapper js-set-bg-blog-thumb" style="height: 75%">
                                        <a href="/items/<%= item._id %>">
                                            <img src="/images/items/<%= item.image %>" alt="Image" />
                                        </a>
                                    </div>
                                    <div class="desc text-center" style="height: 40%">
                                        <h3>
                                            <a class="product-name" href="/items/<%= item._id %>"><%= item.name %></a>
                                        </h3>
                                        <span class="price"><%= item.price %> RSD</span>
                                    </div>
                                </div>
                            </div>
                            <% })} %>

                        </div>


                        <div class="row">
                            <div class="col-md-12 text-center">
                                <nav>
                                    <ul class="pagination pagination-style-2">
                                        <% if(current != 1) { %>
                                        <li>
                                            <a class="prev page-numbers" href="?page=<%= current - 1 %><%= and %>">
                                                <i class="fa fa-long-arrow-left"></i>
                                            </a>
                                        </li>
                                        <% }  %>
                                        <% for( i=1; i<=pages; i++ ) { %>
                                        <li ><a href="?page=<%= i%><%= and %>"><%= i%></a></li>
                                        <%}%>

                                        <% if(pages) {    %>
                                        <% if(current != pages) {    %>
                                        <li>
                                            <a class="next page-numbers" href="page=<%= parseInt(current) + 1; %><%= and %>">
                                                <i class="fa fa-long-arrow-right"></i>
                                            </a>
                                        </li>
                                        <% }} %>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</div>
<% include partials/footer.ejs%>
<% include partials/footerscripts.ejs %>
</body>
</html>
